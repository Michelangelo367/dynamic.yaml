__yaml__:

  - &uuzinciteaid
    caption:      demo block assignment
    rowkeep: 1
    uuid:         uuzinciteaid
    desc:         using block-style variable assignment in jinja
    dreftymacid:  __dreftymacid__
    datainclude:      datainclude
    templateinclude:  templateinclude
    template:         |
      {#- ------------------------------------------------------------------------ -#} 
      {% set ttnavigation %}
        {%- set ttrando = [0,10,50,] |random()  -%}
        {% for item in range(ttrando+1) -%}This is the {{ item }}th item.{{-"\n"-}}{% endfor %}        
      {% endset %}
      {#- ------------------------------------------------------------------------ -#} 
      {{ ttnavigation }}

  - &uudiceblz12
    caption:      block assignment demo
    rowkeep: 1
    uuid:         uudiceblz12
    desc:         using block-style variable assignment in jinja
    dreftymacid:  __dreftymacid__
    template: |
      {#- ------------------------------------------------------------------------ -#} 
      {%- set tthead -%}
      << header >>
      {% endset %}

      {#- ------------------------------------------------------------------------ -#} 
      {% set ttbody %}
      {% for row in range(12) -%}
      item {{ row }}  ;; {{ ""|jjdata_diceword(1,'.') }} 
      {% endfor %}      
      {% endset %}

      {#- ------------------------------------------------------------------------ -#} 
      {% set ttfooter -%}
      << footer >> 
      {% endset %}
      
      {#- ------------------------------------------------------------------------ -#} 
      {%-set voutput -%}
         {{- tthead }} 
         {{- ttbody }} 
         {{- ttfooter }} 
      {%-endset%}  
      
      {#- ------------------------------------------------------------------------ -#}
      {{- voutput }}


